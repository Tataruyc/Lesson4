<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mireaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="511dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextMirea"
        android:layout_width="238dp"
        android:layout_height="58dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="424dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mireaBtn"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/mireaBtn" />

    <EditText
        android:id="@+id/editUserAge"
        android:layout_width="325dp"
        android:layout_height="56dp"
        android:layout_marginTop="47dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextMirea"
        app:layout_constraintStart_toStartOf="@+id/editTextMirea"
        app:layout_constraintTop_toBottomOf="@+id/editTextMirea" />

    <EditText
        android:id="@+id/editUserProfession"
        android:layout_width="325dp"
        android:layout_height="56dp"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toEndOf="@+id/editUserAge"
        app:layout_constraintStart_toStartOf="@+id/editUserAge"
        app:layout_constraintTop_toBottomOf="@+id/editUserAge" />

</androidx.constraintlayout.widget.ConstraintLayout>